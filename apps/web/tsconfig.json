{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/const/*": ["src/const/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/assets/*": ["public/assets/*"]
    }
  },
  "exclude": ["node_modules"]
}
